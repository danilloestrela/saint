#!/bin/bash

saint_cd () {
    directoryPath=$1
    if ls $directoryPath; then
        saint_msg "You're now on ${GREEN}$directoryPath${NC} üòÅ"
        cd $directoryPath || return
    else
        saint_msg "${RED}$directoryPath${NC} :: This path does not exist or there was an error."
    fi
};

saint_cd_open_code () {
    directoryPath=$1
    if ls $directoryPath; then
        editors=("code" "cursor" "pstorm")
        saint_msg "Please select a IDE editor to open the code:"
        saint_msg "${YELLOW}Warning:${NC} If your IDE is not listed, please consider adding it to saint"
        selected_editor=$(saint_select_option "${editors[@]}")
        saint_msg "I'm opening the project within '${YELLOW}$directoryPath${NC}' using $selected_editor for you ü§´."
        cd $directoryPath && $selected_editor . &&
        cd - || cd -
    fi
};